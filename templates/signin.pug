include include/head.pug

doctype html
html(lang="en")
  +head("Twimblr - Sign in")
  body
    include include/navbar.pug
    include include/menu.pug
    .content.signup
      h1 Sign in 
      form#form(action="/signin" method="POST")
        p
          label(for="username") Username* 
          input#username(type="text", name="username", placeholder="Username", required)
        p
          label(for="password") Password* 
          input#password(type="password", name="password", placeholder="password", required)
        p
          button#submit Login
        p Don't have an account? 
          a(href="/signup") Sign up